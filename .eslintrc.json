{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "jasmine": true
    },
    "parser": "@babel/eslint-parser",
    "ignorePatterns": ["build", "node_modules"],
    "rules": {
        "indent": [
            "error",
            "tab",
            {"SwitchCase" : 1}
        ],
        "no-console": "off",
        "no-unused-vars": "warn",
        "semi": ["error", "always"]
    },
    "globals": {
        "console": false,
        "process": false,
        "IS_DEVELOPMENT": false,
        "IS_PRODUCTION": false
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}